<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns:context="http://www.springframework.org/schema/context"
     xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	
	<bean id="cassandraProvider" class="me.prettyprint.hom.CassandraPersistenceProvider">
		<constructor-arg>
			<map>
				<entry key="me.prettyprint.hom.keyspace" value="Twissjava" />
				<entry key="me.prettyprint.hom.clusterName" value="TwissjavaCluster" />
				<entry key="me.prettyprint.hom.classpathPrefix" value="example.models" />
				<entry key="me.prettyprint.hom.hostList" value="localhost:9160" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="cassandraEntityManagerFactory"
		class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="cassandraPersistenceUnit" />
		<property name="persistenceProvider" ref="cassandraProvider" />
	</bean>
    <bean id="cassandraHostConfigurator" class="me.prettyprint.cassandra.service.CassandraHostConfigurator">
        <constructor-arg value="localhost:9160"/>
    </bean>

    <bean id="twissjavaCluster" class="me.prettyprint.cassandra.service.ThriftCluster">
        <constructor-arg value="TwissjavaCluster"/>
        <constructor-arg ref="cassandraHostConfigurator"/>
    </bean>
    
    <bean id="twissjavaKeyspace" class="me.prettyprint.hector.api.factory.HFactory" factory-method="createKeyspace">
        <constructor-arg value="Twissjava"/>
        <constructor-arg ref="twissjavaCluster"/>
    </bean>

	
</beans>